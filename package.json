{
  "name": "poster-form-element",
  "version": "0.0.0",
  "description": "Webcomponent poster-form-element following open-wc recommendations",
  "author": "poster-form-element",
  "license": "MIT",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "start": "webpack-dev-server  --mode=development  --node-resolve  --progress --info-verbosity verbose --open --watch",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:bs": "karma start karma.bs.config.js --coverage",
    "storybook": "start-storybook --node-resolve --watch --open",
    "storybook:build": "build-storybook",
    "start:prod": "webpack --mode=production --local --progress --info-verbosity && cd dist && es-dev-server --open",
    "build": "webpack --mode=production --local --progress --info-verbosity && netlify-lambda build src/functions-lambda",
    "install:lambda": "netlify-lambda install src/functions-lambda",
    "start:lambda": "netlify-lambda serve --timeout=60 --config ./webpack.functions.js src/functions-lambda",
    "build:lambda": "netlify-lambda build --config ./webpack.functions.js src/functions-lambda"
  },
  "dependencies": {
    "@em-polymer/google-map": "^3.0.0-pre.5",
    "@open-wc/webpack-index-html-plugin": "^1.5.10",
    "@vaadin/vaadin": "^14.1.4",
    "@vaadin/vaadin-combo-box": "^5.0.9",
    "@vaadin/vaadin-context-menu": "^4.3.15",
    "@vaadin/vaadin-date-picker": "^4.0.5",
    "@vaadin/vaadin-radio-button": "^1.2.3",
    "@vaadin/vaadin-text-field": "^2.5.3",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.2",
    "google-maps": "^3.3.0",
    "html-webpack-plugin": "^3.2.0",
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0",
    "lit-scss-loader": "^1.0.0",
    "netlify-lambda": "^1.6.3",
    "pageres": "^5.2.0",
    "planet-clock-element": "git+https://github.com/babinux/planet-clock-element.git",
    "poster-design-element": "git+https://github.com/babinux/poster-design-element.git",
    "sass-loader": "^8.0.1",
    "scss-loader": "0.0.1",
    "terser-webpack-plugin": "^2.3.2",
    "webpack-node-externals": "^1.7.2"
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties"
      ]
    ]
  },
  "devDependencies": {
    "@open-wc/building-webpack": "^2.10.8",
    "@open-wc/demoing-storybook": "^1.6.1",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/prettier-config": "^0.1.10",
    "@open-wc/testing": "^2.5.0",
    "@open-wc/testing-karma": "^3.2.28",
    "@open-wc/testing-karma-bs": "^1.3.28",
    "compression-webpack-plugin": "^3.1.0",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.36.1",
    "eslint": "^6.1.0",
    "extract-loader": "^2.0.1",
    "file-loader": "^5.0.2",
    "husky": "^1.0.0",
    "license-webpack-plugin": "^2.1.3",
    "lint-staged": "^8.0.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.28.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.10.1"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": "@open-wc/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
